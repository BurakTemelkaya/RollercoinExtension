{
  "manifest_version": 3,
  "name": "Calculator for Rollercoin",
  "version": "1.0.0",
  "description": "Calculate your daily, weekly, and monthly earnings in Rollercoin",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Calculator for Rollercoin"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://rollercoin.com/*",
    "https://api.binance.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://rollercoin.com/*"
      ],
      "js": [
        "content/websocket-interceptor.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://rollercoin.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "content/websocket-interceptor.js"
      ],
      "matches": [
        "https://rollercoin.com/*"
      ]
    }
  ]
}